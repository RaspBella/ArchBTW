define info
Usage: make -f extras [OPTION]
OPTIONS:
	GNOME
	KDE
	XFCE
endef

export info

pipewire=pipewire pipewire-alsa pipewire-jack pipewire-media-session

all:
	@echo "$$info"

sudo-required:
	@if [ $$UID != "0" ]; then\
		echo "Please use sudo or run as root";\
		exit 1;\
	fi

GNOME: sudo-required
	@pacman -S --needed --noconfirm gnome $(pipewire)
	@systemctl enable gdm

KDE: sudo-required
	@pacman -S --needed --noconfirm plasma kde-applications $(pipewire)
	@systemctl enable sddm

XFCE: sudo-required
	@pacman -S --needed --noconfirm xfce4 xfce4-goodies gvfs lightdm lightdm-gtk-greeter $(pipewire)
	@systemctl enable lightdm
